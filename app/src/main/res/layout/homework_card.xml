<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txv_subject_card"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txv_date_card"
            android:textColor="@android:color/black"
            android:layout_below="@id/txv_subject_card"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txv_description_card"
            android:textColor="@android:color/black"
            android:layout_below="@id/txv_date_card"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line"
            android:background="@color/grey"
            android:layout_below="@id/txv_description_card"
            android:layout_marginTop="16dp"/>
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/btn_showCalendar_card"
            android:text="@string/showCalendar_btn"
            android:textColor="@color/blue"
            android:layout_below="@id/line"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            style="@style/Widget.AppCompat.Button.Borderless" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
